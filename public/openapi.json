{
  "openapi": "3.1.0",
  "info": {
    "title": "법령/판례 통합 검색 API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://law-api-final.vercel.app"
    }
  ],
  "paths": {
    "/api/lawSearch": {
      "get": {
        "summary": "키워드로 법령 목록 검색",
        "operationId": "searchLaws",
        "parameters": [
          { "name": "query", "in": "query", "required": true, "schema": { "type": "string" } }
        ]
      }
    },
    "/api/lawBody": {
      "get": {
        "summary": "MST로 법령 본문 조회",
        "operationId": "getLawBody",
        "parameters": [
          { "name": "mst", "in": "query", "required": true, "schema": { "type": "string" } }
        ]
      }
    },
    "/api/caseSearch": {
      "get": {
        "summary": "키워드로 판례 목록 검색",
        "operationId": "searchCases",
        "parameters": [
          { "name": "query", "in": "query", "required": true, "schema": { "type": "string" } }
        ]
      }
    },
    "/api/caseBody": {
      "get": {
        "summary": "ID로 판례 본문 조회",
        "operationId": "getCaseBody",
        "parameters": [
          { "name": "id", "in": "query", "required": true, "schema": { "type": "string" } }
        ]
      }
    }
  }
}